# Smart Tent Dashboard Configuration
# Copy this file to .env and fill in your device credentials

# Wiz Smart Socket (Grow Lights)
# Find the IP address in your router's connected devices or Wiz app
WIZ_LIGHT_IP=192.168.1.100

# Dreo Humidifier (Cloud API)
# Use your Dreo app login credentials
DREO_EMAIL=your_email@example.com
DREO_PASSWORD=your_password

# Tapo P110 Smart Plug (Energy Monitoring)
# Use your TP-Link/Tapo app login credentials
TAPO_EMAIL=your_email@example.com
TAPO_PASSWORD=your_password
TAPO_DEVICE_IP=192.168.1.101

# Energy Price (for cost calculations)
# Price per kWh in your currency (e.g., 0.25 for €0.25/kWh)
KWH_PRICE=0.25
CURRENCY_SYMBOL=€
